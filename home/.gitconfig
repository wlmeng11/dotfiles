[alias]
	pu = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"
	unstage = reset HEAD --
	graph = log --graph --oneline --decorate
	st = status --short
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[push]
	default = current
[core]
	excludesfile = /home/wmeng/.gitignore_global
	editor = vim -f
[gpg]
	program = gpg
[commit]
	gpgsign = true # automatically sign commits. requires gpg >=2.0
