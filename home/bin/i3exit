#!/bin/sh
lock() {
	i3lock
}

case "$1" in
	lock)
		xset dpms force off
		;;
	logout)
		i3-msg exit
		;;
	suspend)
		gksudo pm-suspend
		;;
	hibernate)
		;;
	reboot)
		gksudo reboot
		;;
	shutdown)
		gksudo shutdown now
		;;
	*)
		echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
		exit 2
esac

exit 0
